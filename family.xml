<?xml version="1.0" encoding="UTF-8"?>
<!-- Internal DTD -->

<!DOCTYPE family[
<!ELEMENT family (person)+>
<!ELEMENT person EMPTY>
<!ATTLIST person name CDATA #REQUIRED>
<!ATTLIST person gender (Male | Female)  #IMPLIED>
<!ATTLIST person type (mother|father|boy|girl) "mother">
<!ATTLIST person id ID #REQUIRED>

]>
 <family>
   <person name="Joe Miller" gender="Male" type="father" id="id_123.456.789"/>

   <person name="Josette Miller" gender="Female" type="girl" id="id_123.456.987"/>

   <person name="Marry Miller" gender="Female" type="girl" id="id_123.456.986"/>

 <person name="David Miller" gender="Male" id="id_123.456.999"/>
 </family>

 <!-- 
         PCDATA - >  <name> John </name>  => John
         CDATA  ->  <person name="John">  => <person name="John">
 -->